{
    "id": "com.github.murat.karakaya.Makas",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.murat.karakaya.Makas",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--filesystem=xdg-pictures:rw"
    ],
    "cleanup": [
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "Makas",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}