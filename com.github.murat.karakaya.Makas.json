{
    "id": "com.github.murat.karakaya.Makas",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "makas",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-pictures:w"
    ],
    "cleanup": [
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/info",
        "/share/pkgconfig",
        "/include",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "Makas",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Murat-Karakaya/makas.git"
                }
            ]
        }
    ]
}